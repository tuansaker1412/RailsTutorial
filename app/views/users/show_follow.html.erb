<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_my_profile"), @user %></span>
      <span><b><%= t ".microposts" %></b> <%= @user.microposts.size %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: Settings.follow.gravatar_size), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <%= will_paginate %>
  <ul class="col-md-8">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= t ".ava" %></th>
            <th><%= t ".user" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
      </table>
    </div>
    <%= will_paginate %>
  </ul>
</div>
