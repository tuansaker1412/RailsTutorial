<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user %>
        <%= t ".user" %><%= @user.name %>
      </h1>
      <h1>
        <%= t ".email" %><%= @user.email %>
      </h1>
    </section>
  </aside>
</div>
